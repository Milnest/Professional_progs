<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GrayButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="DeleteButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorDarkGray</item>
    </style>

    <style name="DarkGrayButton" parent="@style/DeleteButton">
        <item name="android:textSize">35sp</item>
    </style>

</resources>
